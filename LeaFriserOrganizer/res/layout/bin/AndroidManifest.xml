<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leafriserorganizer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

     

        <activity
            android:name="info.leafriser.organizer.LaunchActivity"
             android:theme="@android:style/Theme.Light.NoTitleBar" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name="info.leafriser.organizer.MainActivity"
            android:label="@string/app_name" 
            >
         </activity>
         
        
        <!-- Login Page -->
         <activity
            android:name="info.leafriser.organizer.LoginActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
             >
         </activity>
         
          <activity
            android:name="info.leafriser.organizer.HomeActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
             >
         </activity>
         
          <!-- Register Activity -->
        <activity
            android:name="info.leafriser.organizer.RegisterActivity"
            android:label="@string/app_name"
             >
         </activity>
         
         <!-- History -->
          <activity
            android:name="info.leafriser.organizer.HistoryActivity"
            android:label="@string/app_name">
         </activity>
         
         <!-- Forgot Password Activity -->
        <activity
            android:name="info.leafriser.organizer.ForgotPasswordActivity"
             android:theme="@android:style/Theme.Light.NoTitleBar"
           >
         </activity>
         
        <!-- My events -->
        <activity
            android:name="info.leafriser.organizer.MyEventsActivity"
             android:theme="@android:style/Theme.Light.NoTitleBar"
           >
         </activity>
         
        <!-- EventViewer -->
        <activity android:name="info.leafriser.organizer.EventViewerActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            />
        
        
         <activity android:name="info.leafriser.organizer.SimpleCalendarViewActivity"
                 >
            
        </activity>
        
         
         <!-- Settings -->
          <activity android:name="info.leafriser.organizer.SettingsActivity"
                    android:label="Settings"  >
           </activity>
         
          <!-- Change Security -->
          <activity android:name="info.leafriser.organizer.ChangeSecurityActivity"
               android:theme="@style/CustomDialogTheme"
            android:label="Change Security Question"  >
            
        </activity>
        
         
         <!-- Change Password -->
         <activity 
             android:name="info.leafriser.organizer.ChangePasswordActivity"
             android:theme="@style/CustomDialogTheme"
            android:label="Change Password"
         >
            </activity>
            
          <!-- Change Username -->
         <activity 
             android:name="info.leafriser.organizer.ChangeUsernameActivity"
             android:theme="@style/CustomDialogTheme"
            android:label="Change Username"
         >
            </activity>
    </application>


</manifest>
